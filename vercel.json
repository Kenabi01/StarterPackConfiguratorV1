{
  "functions": {
    "api/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "builds": [
    { "src": "api/*.ts", "use": "@vercel/node" },
    { "src": "apps/configurator/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/apps/configurator/index.html" },
    { "src": "/configurator/(.*)", "dest": "/apps/configurator/$1" }
  ]
}

